<div class="card mb-3">
  <div class="card-header">
    <center>
      <h3 class="center">Create New user</h3>
    </center>
  </div>
  <div class="card-body">
    <%= form_with(url: admins_users_path, model: @user) do |f| %>
      <div class="d-flex justify-content-around">
        <div class="field form-group">
          <%=f.label :"First/Given Name" %>
          <%= f.text_field :first_name, class: 'form-control', placeholder: "First Name", required: true %>
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: "Email", required: true %>
          <%= f.label :"Phone Number" %>
          <%= f.text_field :phone, class: 'form-control', placeholder:"70 123 4567", required: true %>
        </div>
        <div class="field form-group mb-3">
          <%= f.label :"Last Name" %>
          <%= f.text_field :last_name, class: 'form-control', placeholder: "Last Name" , required: true %>
          <div class="my-3">
            <%= f.label :country %>
            <%= f.country_select :country, class: 'form-control', prompt: "Select", required: true %>
          </div>
          <%= f.label :"Country Code" %>
          <%= f.text_field :country_code, class: 'form-control', placeholder: " 92 ", required: true %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit class: "btn btn-success" %>
        <%= link_to 'Back', admins_users_path, class: "btn btn-dark" %>
      </div>
    </div>
  </div>
<% end %>
