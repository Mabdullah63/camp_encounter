<% locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    <td><%= location.id %></td>
    <td><%= link_to 'View', admins_location_path(location), class: "btn btn-outline-dark btn-sm" %></td>
    <%if current_user.admin? %>
      <td><%= link_to 'Edit', edit_admins_location_path(location), class: 'btn btn-outline-warning' %></td>
      <td><%= link_to 'Destroy', admins_camp_path(location), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
    <% end %>
  </tr>
<% end %>
