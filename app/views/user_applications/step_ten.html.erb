<%= render 'progress', user_application: @user_application %>

<%= form_with(model: @user_application, url: wizard_path, method: :put, local: true) do |f| %>
  <% if @user_application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_application.errors.count, "error") %> prohibited this User Application from being updated:</h2>
      <ul>
        <% @user_application.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= render 'confirmation', form: f %>
  <div class="row d-flex justify-content-center align-items-center">
    <div class="card rounded-3">
      <center><h2> Step Ten</h2></center>
      <div class="card-body p-4 p-md-5 bg-light">
        <div class="row">
          <div class="col-md-6 mb-4">
            <div class="form-outline">
                <%= f.label "Shirt Size" %><br />
                <%= f.select :shirt_size, ["Small", "Medium", "Large", "XL", "XXL"], autofocus: true, prompt: "select Shirt Size", size:"25" %>
            </div>
          </div>
        </div>
        <div></div>
        <div class="actions form-outline">
          <%= link_to "previous", wizard_path(:step_nine, user_application: @user_application), class: "btn btn-outline-dark" %>
          <% if @user_application.progress_bar >=90 %>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Submit</button>
          <% else %>
            <%= link_to "View Dashboard", wizard_path(:index), class: "btn btn-outline-dark" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
