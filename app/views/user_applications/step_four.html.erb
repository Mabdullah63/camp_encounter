<%= render 'progress', user_application: @user_application %>

<%= form_with(model: @user_application, url: wizard_path, method: :put, local: true) do |f| %>
  <% if @user_application.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_application.errors.count, "error") %> prohibited this User Application from being updated:</h2>
      <ul>
        <% @user_application.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row d-flex justify-content-center align-items-center">
    <div class="card rounded-3">
      <center><h2> Step Four</h2></center>
      <div class="card-body p-4 p-md-5 bg-light">
        <div class="row">
          <div class="col-md-6 mb-4">
            <div class="form-outline">
                <%= f.label "Food Choice" %><br />
                <%= f.select :food_options, ["Vegetarian", "Non-Vegetarian"], autofocus: true, prompt: "Select Choice", size:"25" %>
            </div>
          </div>
        </div>
        <div></div>
        <div class="actions">
          <%= f.submit class: "btn btn-success" %>
          <%= link_to "Skip", wizard_path(:step_five, user_application: @user_application), class: "btn btn-info" %>
          <%= link_to "previous", wizard_path(:step_three, user_application: @user_application), class: "btn btn-outline-dark" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
